    </div>
    <div class="<%= 'd-none' if @booking.persisted? %> booking-footer container d-flex justify-content-between align-items-center" data-booking-target="trigger">
      <h3><%= @hostel.name.upcase %></h3>
      <div class="book-btn-show" data-action="click->booking#showBookingModal">
        <h3 class="<%= @hostel.name.downcase %>-background">Book</h3>
      </div>
    </div>

  </div>
<% end %>
