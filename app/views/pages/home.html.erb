<section id="video-container">
  <%= cl_video_tag 'Utopy/teaser', loop:true, autoplay: true, muted:true %>
</section>
<div class="container">
  <section class="accueil">
    <h1 class="title-home"><%= t('home.title_1') %></h1>
    <p><%= t('home.text_1_html') %>
    </p>
  </section>
</div>
<section class="map">
  <div style="width: 100vw; height: 50vh;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</section>

<section id="hostels" class="pt-4 container">
  <div class="coast col-sm-5">
    <%= cl_image_tag 'Utopy/coast_full', class:'w-100 img-banner' %>
    <div class="coast-background content container pb-4">
      <%= cl_image_tag 'Utopy/coast_banner_1', class:'w-100 pb-2 banner-1' %>
      <div class="hostel-mosaic d-flex justify-between">
        <%= cl_image_tag 'Utopy/coast_bedroom_1', class:'w-50 pe-1' %>
        <div class="hostel-mosaic-right w-50 ps-1">
          <%= cl_image_tag 'Utopy/coast_banner_2', class:'w-100 pb-1' %>
          <%= cl_image_tag 'Utopy/coast_bathroom_1', class:'w-100 pt-1' %>
        </div>
      </div>
      <p class="text-hostel my-4"><%= t('home.coast_text_html') %></p>
      <%= link_to hostel_path(Hostel.find_by(name:'Coast')), class:'book-btn' do %>
        <h3>Book Coast</h3>
      <% end %>
    </div>
  </div>
    <div class="garden col-sm-5">
    <%= cl_image_tag 'Utopy/garden_full', class:'w-100 img-banner' %>
    <div class="garden-background content container pb-4">
      <%= cl_image_tag 'Utopy/garden_banner_1', class:'w-100 pb-2 banner-1' %>
      <div class="hostel-mosaic d-flex justify-between">
        <%= cl_image_tag 'Utopy/garden_bedroom_1', class:'w-50 pe-1' %>
        <div class="hostel-mosaic-right w-50 ps-1">
          <%= cl_image_tag 'Utopy/garden_banner_2', class:'w-100 pb-1' %>
          <%= cl_image_tag 'Utopy/garden_bathroom_1', class:'w-100 pt-1' %>
        </div>
      </div>
      <p class="text-hostel my-4"><%= t('home.garden_text_html') %></p>
      <%= link_to hostel_path(Hostel.find_by(name:'Garden')), class:'book-btn' do %>
        <h3>Book Garden</h3>
      <% end %>
    </div>
  </div>
</section>
<section id="contact">
  <div class="container">
    <h1 class="title-home"><%= t('home.title_2') %></h1>
    <form action="" method="post" accept-charset="UTF-8" id="contact-form" class="form-horizontal col-sm-6" role="form">

      <div class="form-group">
        <div class="col-sm-12">
          <input type="text" class="input-form" id="name" placeholder="<%= t('home.name_input') %>" name="name" value="" required>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <input type="email" class="input-form" id="email" placeholder="<%= t('home.email_input') %>" name="email" value="" required>
        </div>
      </div>

      <textarea class="input-form" rows="10" placeholder="<%= t('home.message_input') %>" name="message" required></textarea>

      <button class="btn send-button" id="submit" type="submit" value="SEND">
        <div class="alt-send-button d-flex justify-content-around align-items-center">
          <!-- <i class="fa fa-paper-plane"></i> -->
          <span class="send-text"><%= t('home.send_button') %></span>
        </div>
        <!-- anti spam -->
        <div style="text-indent:-99999px; white-space:nowrap; overflow:hidden; position:absolute;" aria-hidden="true">
          <input type="text" name="_gotcha" tabindex="-1" autocomplete="off" />
        </div>

      </button>

    </form>
  </div>
</section>

<% if request.user_agent =~ /Mobile/ %>
  <!-- Content to show on mobile devices -->
  <section id='about-us'>
    <div class="container">

      <h1 class="title-home"><%= t('home.title_3') %></h1>
      <p><%= t('home.text_2_html') %></p>
      <%= cl_image_tag 'Utopy/about', class:'w-100 mt-2 mb-4' %>
      <p><%= t('home.text_2_2_html') %></p>
      <div>
        <div class="d-flex align-items-center mb-4">
          <p class="col-7 mb-0"><%= t('home.title_3_2_html') %></p>
          <%= cl_image_tag 'Utopy/meeting_place', class:'col-5' %>
        </div>
        <p class="m-0 pb-5"><%= t('home.text_2_3') %>
        </p>
      </div>

    </div>
  </section>
<% else %>
  <!-- Content to show on non-mobile devices -->
  <section id='about-us' class="pb-5">
    <div class="container pb-4">

      <h1 class="title-home"><%= t('home.title_3') %></h1>
      <div class="d-flex justify-content-between mb-5">
        <div class="col-6">
          <p><%= t('home.text_2_html') %></p>
          <p><%= t('home.text_2_2_html') %></p>
        </div>
        <%= cl_image_tag 'Utopy/about', class:'col-5 img-about' %>
      </div>
      <div>
      <div class="d-flex justify-content-between">
        <%= cl_image_tag 'Utopy/meeting_place', class:'col-5' %>
        <div class="col-5 d-flex flex-column justify-content-around">
          <p class="mb-0"><%= t('home.title_3_2_html') %></p>
          <p class="m-0 pb-5"><%= t('home.text_2_3') %>
        </div>
      </div>
      </div>

    </div>
  </section>
<% end %>
