<div class="mobile-navbar">
  <div class="navbar navbar-expand-sm navbar-light">
    <div class="container-fluid navbar-lewagon">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo_blanc.png" %>
      <% end %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse container" id="navbarSupportedContent">
        <div class="d-flex flex-column justify-content-between h-100">
          <ul class="navbar-nav mt-2">
            <i class="fa-solid fa-xmark text-end mb-4" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></i>
            <li class="nav-item bottom-border py-2 text-end active">
                <%= link_to root_path, class: "nav-link" do %>
                  <h3>Home</h3>
                <% end %>
            </li>
            <li class="nav-item bottom-border py-2 text-end">
              <%= link_to hostel_path(Hostel.find_by(name: "Coast")), class: "nav-link" do %>
                <h3>Coast</h3>
              <% end %>
            </li>
            <li class="nav-item bottom-border py-2 text-end">
              <%= link_to hostel_path(Hostel.find_by(name: "Garden")), class: "nav-link" do %>
                <h3>Garden</h3>
              <% end %>
            </li>
            <li class="nav-item bottom-border py-2 text-end">
              <%= link_to "#{root_path}#about-us", class: "nav-link" do %>
                <h3>About us</h3>
              <% end %>
            </li>
            <li class="nav-item bottom-border py-2 text-end">
              <%= link_to "#{root_path}#contact", class: "nav-link" do %>
                <h3>Contact</h3>
              <% end %>
            </li>
          </ul>
          <div class="mb-4 navbar-bottom">
            <div class="d-flex justify-content-between my-2">
              <%= cl_image_tag 'Utopy/FRA' %>
              <%= cl_image_tag 'Utopy/GBR' %>
            </div>
            <div class="w-100 bottom-border"></div>
            <div class="d-flex justify-content-between mt-4">
              <%= link_to 'https://www.instagram.com/utopyhostel/', target:'_blank' do %>
                <i class="fa-brands fa-square-instagram"></i>
              <% end %>
              <%= link_to 'https://wa.me/33749198463', target:'_blank' do %>
                <i class="fa-brands fa-square-whatsapp"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

